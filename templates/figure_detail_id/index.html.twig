{% extends 'base.html.twig' %}

{% block title %}Hello FigureDetailIdController!{% endblock %}

{% block content %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3 card-list">
        {% for trick in figure %}
            <div class="col">
                <div class="card shadow-sm">
                    <a href="/details-figure/{{ trick.id }}">
                        <img src="{{ asset('/assets/image/stalefish.jpg') }}" class="card-img" alt="">
                        <div class="card-body">
                            <p class="card-text d-flex justify-content-center mb-2">{{ trick.groupe }}</p>
                            <div class="d-flex justify-content-center">
                                <div class="btn-group">
                                    <a href="/details-figure/{{ trick.id }}"><button type="button" class="btn btn-sm btn-outline-success">Consulter</button></a>
                                    <a href="/update-une-figure/{{ trick.id }}"><button type="button" class="btn btn-sm btn-outline-primary">Modifier</button></a>
                                    <a href="/supprimer-une-figure/{{ trick.id }}"><button type="button" class="btn btn-sm btn-outline-danger">Supprimer</button></a>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        {% endfor %}
    </div>
    </main>
{% endblock %}
