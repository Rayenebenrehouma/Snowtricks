{% extends 'base.html.twig' %}

{% block title %}Hello FigureDetailsController!{% endblock %}

{% block content %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <div class="example-wrapper">
            <h1 class="titre-figure">{{ figure.nom }}</h1>
    </div>
<div class="row">
    <div class="col-md-6 media-figure">
        <div class="espace-blanc"></div>
        <img src="{{ asset('assets/image_directory/' ~  figure.illustration ) }}" alt="" width="100%" height="315">
    </div>
    <div class="col-md-6 figure-media">
        <div class="espace-blanc"></div>
        <iframe width="100%" height="315" src="{{ figure.video }}"  frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
    </div>
    <div class="col-12">
        <hr class="separation">
    </div>
    <div class="col-12">
        <h2 class="figure-description">Description</h2>
        <p>{{ figure.description }}</p>
    </div>
    <div class="col-12">
        <h2>Commentaires:</h2>

    </div>
</div>
{% endblock %}
